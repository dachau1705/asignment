<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh sách bài viết</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <%- include('../partials/header') %>

        <div class="container mt-5">
            <h2 class="text-center">Danh sách bài viết</h2>

            <div class="row mb-4">
                <div class="col-md-12">
                    <a href="/articles/add" class="btn btn-success mb-2">Thêm bài viết mới</a>

                    <form class="form-inline" method="GET" action="/articles">
                        <input class="form-control mr-2" type="text" name="searchTitle"
                            placeholder="Tìm kiếm theo tiêu đề" aria-label="Tìm kiếm" value="<%= searchTitle %>">
                        <input class="form-control mr-2" type="text" name="searchAuthor"
                            placeholder="Tìm kiếm theo tác giả" aria-label="Tìm kiếm" value="<%= searchAuthor %>">
                        <button class="btn btn-primary" type="submit">Tìm kiếm</button>
                    </form>
                </div>
            </div>

            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>#</th>
                        <th>Tiêu đề</th>
                        <th>Tác giả</th>
                        <th>Danh mục</th>
                        <th>Ngày đăng</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    <% articles.forEach(function(article, index) { %>
                        <tr>
                            <th scope="row">
                                <%= index + 1 + (currentPage - 1) * pageSize %>
                            </th>
                            <td>
                                <%= article.title %>
                            </td>
                            <td>
                                <%= article.author %>
                            </td>
                            <td>
                                <%= article.categoryName %>
                            </td>
                            <td>
                                <%= article.createdAt.toDateString() %>
                            </td>
                            <td>
                                <% if(article.status==='duyet' ) { %>
                                    <span class="badge badge-success">Đã duyệt</span>
                                    <% } else if(article.status==='chua_duyet' ) { %>
                                        <span class="badge badge-warning">Chưa duyệt</span>
                                        <% } else { %>
                                            <span class="badge badge-danger">Đã xóa</span>
                                            <% } %>
                            </td>
                            <td>
                                <a href="/articles/edit/<%= article._id %>" class="btn btn-sm btn-info">Sửa</a>
                                <form action="/articles/delete/<%= article._id %>" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-danger">Xóa</button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>

            <!-- Phân trang -->
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                        <a class="page-link"
                            href="?page=<%= currentPage - 1 %>&searchTitle=<%= searchTitle %>&searchAuthor=<%= searchAuthor %>"
                            tabindex="-1">Trước</a>
                    </li>

                    <% for (let i=1; i <=totalPages; i++) { %>
                        <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                            <a class="page-link"
                                href="?page=<%= i %>&searchTitle=<%= searchTitle %>&searchAuthor=<%= searchAuthor %>">
                                <%= i %>
                            </a>
                        </li>
                        <% } %>

                            <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                                <a class="page-link"
                                    href="?page=<%= currentPage + 1 %>&searchTitle=<%= searchTitle %>&searchAuthor=<%= searchAuthor %>">Sau</a>
                            </li>
                </ul>
            </nav>
        </div>

        <%- include('../partials/footer') %>
</body>

</html>